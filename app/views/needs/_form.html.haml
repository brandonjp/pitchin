%div.six.columns
  = form_for [@event, @need] do |f|
    -if @need.errors.any?
      #error_explanation
        %h2= "#{pluralize(@need.errors.count, "error")} prohibited this need from being saved:"
        %ul
          - @need.errors.full_messages.each do |msg|
            %li= msg

    %p
      = f.label "What is needed?"
      = f.text_field :name
    %p
      = f.label "How many are needed?"
      = f.text_field :qty, :size => 4
    %p
      = f.label "if needed, specify the units (like 'boxes' or 'trays' or 'loaves')"
      = f.text_field :units
    %p
      = f.label "Any additional comments about this item?"
      = f.text_area :comments

    .actions
      = f.submit 'Save'

